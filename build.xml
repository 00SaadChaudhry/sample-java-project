<?xml version="1.0"?>
<project name="SampleJavaProject" default="jar">
  <property name="jar" value="SJP.jar"/>
  <property name="src.dir" value="src"/>
  <property name="build.dir" value="build"/>
  <property name="test.dir" value="test"/>
  <property name="build.classes.dir" value="${build.dir}/classes"/>
  <property name="test.classes.dir" value="${build.dir}/test"/>
  <taskdef resource="net/sf/antcontrib/antlib.xml"/>

  <target name="init">
    <mkdir dir="${build.classes.dir}"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${src.dir}" destdir="${build.classes.dir}"
	   optimize="on" debug="on" deprecation="on"
	   includeantruntime="false">
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="jar" depends="compile">
    <jar destfile="${jar}" basedir="${build.classes.dir}">
      <manifest>
        <attribute name="Main-Class" value="sample.java.project.SampleJavaProject"/>
      </manifest>
    </jar>
  </target>

  <target name="clean">
    <delete dir="${build.dir}"/>
    <delete file="${jar}"/>
  </target>

  <target name="format">
    <for param="file">
      <path>
        <fileset dir="${src.dir}" includes="**/*.java"/>
        <fileset dir="${test.dir}" includes="**/*.java"/>
      </path>
      <sequential>
        <exec executable="astyle">
          <arg value="--mode=java"/>
          <arg value="--suffix=none"/>
          <arg value="@{file}"/>
        </exec>
      </sequential>
    </for>
  </target>

  <!-- JUnit -->

  <target name="test-init" depends="init">
    <mkdir dir="${test.classes.dir}"/>
  </target>

  <target name="test-compile" depends="test-init,compile">
    <javac srcdir="${test.dir}" destdir="${test.classes.dir}"
	   classpath="${build.classes.dir}" includeantruntime="yes">
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="test" depends="test-compile">
    <junit>
      <classpath>
	<pathelement path="${build.classes.dir}"/>
	<pathelement path="${test.classes.dir}"/>
      </classpath>
      <batchtest>
	<formatter type="brief" usefile="false"/>
	<fileset dir="${test.classes.dir}"/>
      </batchtest>
    </junit>
  </target>
</project>
